<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.0.xsd">

    <changeSet author="admin" id="1">
        <createTable tableName="item">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="img_path" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="admin" id="2">
        <createTable tableName="cart_item">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="item_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_cart_item_item" referencedTableName="item" referencedColumnNames="id"/>
            </column>
            <column name="count" type="INT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="admin" id="3">
        <createTable tableName="order_">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="total_sum" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="admin" id="4">
        <createTable tableName="order_item">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="item_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_cart_item_item" referencedTableName="item" referencedColumnNames="id"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="count" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="order_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_order_item_order" referencedTableName="order_" referencedColumnNames="id"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="admin" id="5">
        <addUniqueConstraint columnNames="order_id, item_id" constraintName="idx_order_item_inq" tableName="order_item" />
    </changeSet>
</databaseChangeLog>